{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block body %}

	<h1>Utilisateurs</h1>

	<table class="table" id="roles">
		<thead>
			<tr>
				<th>Email</th>
				<th>Rôles</th>
				<th>Mot de Passe</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>   
			{% for user in users %}
				<tr>
					<td>{{ user.email }}</td>
					<td>
						{% for role in user.userRoles %}
							{{ role.title }}
						{% endfor %}
					</td>
					<td>{{ user.password }}</td>
					<td>
						<a class="btn-sm  btn-secondary mb-1" href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
						<a class="btn-sm  btn-secondary mb-1" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">pas de données</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn-sm  btn-secondary mb-1" href="{{ path('user_new') }}">Nouvel Utilisateur</a>
{% endblock %}
